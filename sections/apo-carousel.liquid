          <a href="{{ section.settings.link3 }}" target="_blank" rel="noopener noreferrer">
            <img src="{{ section.settings.image_picker3 | image_url: width: 5760 }}" alt="{{ section.settings.image_picker3.alt }}" loading='lazy' />
          </a>
        </div>
      {% endif %}

      {% if section.settings.image_picker4 %}
        <div class="carousel-image">
          <a href="{{ section.settings.link4 }}" target="_blank" rel="noopener noreferrer">
            <img src="{{ section.settings.image_picker4 | image_url: width: 5760 }}" alt="{{ section.settings.image_picker4.alt }}" loading='lazy' />
          </a>
        </div>
      {% endif %}

      {% if section.settings.image_picker5 %}
        <div class="carousel-image">
          <a href="{{ section.settings.link5 }}" target="_blank" rel="noopener noreferrer">
            <img src="{{ section.settings.image_picker5 | image_url: width: 5760 }}" alt="{{ section.settings.image_picker5.alt }}" loading='lazy' />
          </a>
        </div>
      {% endif %}

      {% if section.settings.image_picker6 %}
        <div class="carousel-image">
          <a href="{{ section.settings.link6 }}" target="_blank" rel="noopener noreferrer">
