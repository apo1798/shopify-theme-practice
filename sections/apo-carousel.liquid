{{ 'carousel.css' | asset_url | stylesheet_tag }}

<script src="{{ 'carousel.js' | asset_url }}" defer="defer"></script>

<!-- {{ section.settings.image_picker | image_url }} <br> -->

{%- comment -%} image_url 最多支援到5760px {%- endcomment -%}

<div class="carousel">
  <button class="carousel-button prev" ><</button>
  <button class="carousel-button next" >></button>
    <div class="carousel-slide">
      
      {% if section.settings.image_picker1 %}
        <div class="carousel-image">
          <a href="{{ section.settings.link1 }}" target="_blank" rel="noopener noreferrer">
            <img src="{{ section.settings.image_picker1 | image_url: width: 5760 }}" alt="{{ section.settings.image_picker1.alt }}" loading='lazy' />
          </a>
        </div>
      {% endif %}
    
      {% if section.settings.image_picker2 %}
        <div class="carousel-image">
          <a href="{{ section.settings.link2 }}" target="_blank" rel="noopener noreferrer">
